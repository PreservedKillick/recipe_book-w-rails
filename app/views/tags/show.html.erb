<h1><%= @tag.description %></h1>

<h3>Recipes with this tag:</h3>

<ul>
  <% @tag.recipes.each do |recipe| %>
    <li><a href="/recipes/<%=recipe.id %>"><%= recipe.name %></a></li>
  <% end %>
</ul>


<button><a href="/tags/<%= @tag.id %>/edit">Edit/Update Tag</a></button>

<button><a href="/tags/<%= @tag.id %>"
                 data-confirm="Are you sure?"
                 data-method="delete"
                 rel="nofollow">Delete Tag</a>
</button>


<button><a href="/">Home</a></button>
