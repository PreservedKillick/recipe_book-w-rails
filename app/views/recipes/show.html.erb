<h1><%= @recipe.name %></h1>

<h3>Ingredients:</h3>

<p><%= @recipe.ingredients %></p>

<h3>Instructions:</h3>

<p><%= @recipe.instructions %></p>

<h3>associated tags:</h3>
<ul>
  <% @recipe.tags.each do |tag| %>
  <li><%= tag.description %></li>
  <% end %>
</ul>

<button><a href="/recipes/<%= @recipe.id %>/edit">Edit</a></button>

<button><a href="/recipes/<%= @recipe.id %>"
                 data-confirm="Are you sure?"
                 data-method="delete"
                 rel="nofollow">Delete</a>
</button>


<button><a href="/">Home</a></button>
